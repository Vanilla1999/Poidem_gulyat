<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end_filter"
        motion:constraintSetStart="@id/start_filter"
        motion:duration="300">
       <KeyFrameSet>
       </KeyFrameSet>
<!--        <OnClick motion:targetId="@id/filtersTextView"-->
<!--            motion:clickAction="transitionToEnd"/>-->

    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/start_filter"
        motion:constraintSetStart="@id/end_filter"
        motion:duration="300">
        <KeyFrameSet>
        </KeyFrameSet>
<!--        <OnClick motion:targetId="@id/filtersTextView"-->
<!--            motion:clickAction="transitionToEnd"/>-->

    </Transition>
    <Transition
        motion:constraintSetEnd="@+id/start_filter"
        motion:constraintSetStart="@id/end2"
        motion:duration="300">
        <KeyFrameSet>
        </KeyFrameSet>
<!--        <OnClick motion:targetId="@id/nameFilterTextView"-->
<!--            motion:clickAction="transitionToStart"/>-->

    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@id/start_filter"
        motion:duration="300">
<!--        <OnClick motion:targetId="@id/nameFilterTextView"-->
<!--            motion:clickAction="transitionToStart"/>-->
    </Transition>

    <ConstraintSet android:id="@+id/start_filter">
        <Constraint
            motion:layout_constraintEnd_toStartOf="@+id/guidelineVertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/guidelineHorizontal2"
            motion:layout_constraintStart_toStartOf="@+id/guidelineVertical3"
            android:id="@+id/cancel2Button"
            motion:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal3" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_filter">

        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="@+id/guidelineVertical"
            android:layout_width="1dp"
            android:clickable="true"
            android:id="@+id/nameFilterTextView" />
        <Constraint
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textSize="24dp"
            motion:layout_constraintStart_toStartOf="@+id/guidelineVertical"
            motion:layout_constraintEnd_toStartOf="@+id/guidelineVertical1"
            android:layout_width="wrap_content"
            android:id="@+id/filtersTextView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textSize="24dp"
            motion:layout_constraintStart_toStartOf="@+id/guidelineVertical"
            motion:layout_constraintEnd_toStartOf="@+id/guidelineVertical1"
            android:layout_width="wrap_content"
            android:id="@+id/nameFilterTextView" />
        <Constraint
            android:layout_height="0dp"
            android:clickable="true"
            motion:layout_constraintEnd_toStartOf="@+id/guidelineVertical1"
            android:layout_width="1dp"
            android:id="@+id/filtersTextView" />
    </ConstraintSet>
</MotionScene>