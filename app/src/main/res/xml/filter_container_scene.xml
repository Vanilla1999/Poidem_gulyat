<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/end2"
        motion:duration="50">
        <KeyFrameSet />
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/filterMain"
            motion:touchRegionId="@id/filterMain" />
    </Transition>
    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@id/start"
        motion:duration="300" />
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/filterMain"
            layout="@layout/filter_main_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:clickable="true"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:id="@+id/filterMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:clickable="true"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/filterMain"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:clickable="true"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/guidelineHorizontal" />
    </ConstraintSet>
</MotionScene>